<form>
<table>
  <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, project_path(project) %></td>
      <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-warning btn-sm" %></td>
      <td><%= button_to 'Remove', project_path(project), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to "Add a New project", new_project_path %>
</tr>
</table>
</form>
